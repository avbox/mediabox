<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mediabox.mediaboxremote.RemoteActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:id="@+id/btnMenu"
        android:layout_marginTop="61dp"
        android:onClick="onButtonPressed"
        android:background="@android:color/holo_red_dark"
        android:textColor="#ffffff"
        android:width="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  UP  "
        android:id="@+id/btnUp"
        android:layout_alignBottom="@+id/btnMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:onClick="onButtonPressed"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOWN"
        android:id="@+id/btnDown"
        android:onClick="onButtonPressed"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnMenu"
        android:layout_toLeftOf="@+id/btnRight"
        android:layout_toStartOf="@+id/btnRight"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEFT"
        android:id="@+id/btnLeft"
        android:layout_alignTop="@+id/btnMenu"
        android:layout_toLeftOf="@+id/btnDown"
        android:layout_toStartOf="@+id/btnDown"
        android:onClick="onButtonPressed"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:id="@+id/btnRight"
        android:layout_alignTop="@+id/btnMenu"
        android:layout_toRightOf="@+id/btnUp"
        android:layout_toEndOf="@+id/btnUp"
        android:onClick="onButtonPressed"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/btnPlay"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnInfo"
        android:layout_toStartOf="@+id/btnInfo"
        android:onClick="onButtonPressed"
        android:background="@android:color/holo_green_light"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFO"
        android:id="@+id/btnInfo"
        android:layout_alignTop="@+id/btnPlay"
        android:layout_alignRight="@+id/btnRight"
        android:layout_alignEnd="@+id/btnRight"
        android:onClick="onButtonPressed"
        android:background="@android:color/holo_red_dark"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/btnStop"
        android:layout_alignTop="@+id/btnPlay"
        android:layout_toLeftOf="@+id/btnPlay"
        android:layout_toStartOf="@+id/btnPlay"
        android:onClick="onButtonPressed"
        android:background="@android:color/holo_red_dark"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/btnBack"
        android:layout_below="@+id/btnDown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onButtonPressed"
        android:background="@android:color/holo_red_dark"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:id="@+id/btnEnter"
        android:layout_below="@+id/btnDown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonPressed"
        android:background="@android:color/holo_green_light"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEYBOARD"
        android:id="@+id/btnKeyboard"
        android:onClick="onKeyboard"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/btnDown"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|&lt;"
        android:id="@+id/btnPrev"
        android:background="@android:color/holo_red_dark"
        android:textColor="#ffffff"
        android:minWidth="50dp"
        android:layout_alignTop="@+id/btnRew"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:onClick="onButtonPressed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;"
        android:id="@+id/btnRew"
        android:layout_above="@+id/btnPlay"
        android:layout_toEndOf="@+id/btnPrev"
        android:background="@android:color/holo_red_light"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/btnPrev"
        android:minWidth="50dp"
        android:onClick="onButtonPressed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">>"
        android:id="@+id/btnFF"
        android:background="@android:color/holo_red_light"
        android:textColor="#ffffff"
        android:width="5dp"
        android:minWidth="50dp"
        android:layout_alignTop="@+id/btnRew"
        android:layout_toRightOf="@+id/btnRew"
        android:layout_toEndOf="@+id/btnRew"
        android:onClick="onButtonPressed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/btnNext"
        android:background="@android:color/holo_red_dark"
        android:textColor="#ffffff"
        android:minWidth="50dp"
        android:layout_alignTop="@+id/btnFF"
        android:layout_toRightOf="@+id/btnFF"
        android:layout_toEndOf="@+id/btnFF"
        android:onClick="onButtonPressed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vol Up"
        android:id="@+id/btnVolUp"
        android:layout_alignTop="@+id/btnUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_purple"
        android:textColor="#ffffff"
        android:onClick="onButtonPressed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vol Down"
        android:id="@+id/btnVolDown"
        android:layout_alignTop="@+id/btnDown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_purple"
        android:textColor="#ffffff"
        android:onClick="onButtonPressed"/>
</RelativeLayout>
